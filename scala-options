#!/usr/bin/env python
import os, sys

if len(sys.argv) != 1:
  print >> sys.stderr, "usage: scala-options|scalac-options|fsc-options|scaladoc-options|scalap-options"
  sys.exit(1)

program_name = os.path.basename(sys.argv[0])
if program_name == "scalac-options":
  print "-language:experimental.macros"
elif program_name == "scala-options":
  print "-language:experimental.macros"
